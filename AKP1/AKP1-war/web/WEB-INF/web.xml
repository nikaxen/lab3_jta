<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/JDBCuchet</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <security-constraint>
        <display-name>prep</display-name>
        <web-resource-collection>
            <web-resource-name>prep area</web-resource-name>
            <description/>
            <url-pattern>/index.xhtml</url-pattern>
            <url-pattern>/statement-details.xhtml</url-pattern>
            <url-pattern>/statements.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>prep</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>neizv</display-name>
        <web-resource-collection>
            <web-resource-name>neizv-area</web-resource-name>
            <description/>
            <url-pattern>/neizv-user.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>neizv</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>stud</display-name>
        <web-resource-collection>
            <web-resource-name>stud area</web-resource-name>
            <description/>
            <url-pattern>/index.xhtml</url-pattern>
            <url-pattern>/marks.xhtml</url-pattern>
            <url-pattern>/mark-details.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>stud</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>MyRealm</realm-name>
        <form-login-config>
            <form-login-page>/login.xhtml</form-login-page>
            <form-error-page>/loginerror.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <error-page>
        <error-code>403</error-code>
        <location>/403.xhtml</location>
    </error-page>
    <security-constraint>
        <display-name>dek</display-name>
        <web-resource-collection>
            <web-resource-name>dek area</web-resource-name>
            <description/>
            <url-pattern>/create-statement.xhtml</url-pattern>
            <url-pattern>/index.xhtml</url-pattern>
            <url-pattern>/ready-statements.xhtml</url-pattern>
            <url-pattern>/statement-details.xhtml</url-pattern>
            <url-pattern>/statements.xhtml</url-pattern>
            <url-pattern>/users.xhtml</url-pattern>
            <url-pattern>/grants.xhtml</url-pattern>
            <url-pattern>/grant-details.xhtml</url-pattern>
            <url-pattern>/grant-add.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>dek</role-name>
        </auth-constraint>
    </security-constraint>
    <security-role>
        <description>neizv</description>
        <role-name>neizv</role-name>
    </security-role>
    <security-role>
        <description>stud</description>
        <role-name>stud</role-name>
    </security-role>
    <security-role>
        <description>prep</description>
        <role-name>prep</role-name>
    </security-role>
    <security-role>
        <description>dek</description>
        <role-name>dek</role-name>
    </security-role>
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>
</web-app>
